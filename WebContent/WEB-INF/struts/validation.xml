<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
  <formset>
    <form name="mailForm">
      <field property="from" depends="email">
        <arg position="0" key="start.from"/>
      </field>
      <field property="to" depends="email">
        <arg position="0" key="start.to"/>
      </field>
    </form>
  </formset>
</form-validation>